# SuperAI Environment Configuration
# Copy this file to .env and update the values as needed

# ================================
# Redis Configuration
# ================================
REDIS_HOST=agi-redis-lb
REDIS_PORT=6379
REDIS_DB=0

# ================================
# API Keys
# ================================
# Tavily API for web search functionality
# Get your API key from: https://tavily.com
TAVILY_API_KEY=your_tavily_api_key_here

# OpenAI API for enhanced AI capabilities (optional)
# Get your API key from: https://platform.openai.com
OPENAI_API_KEY=your_openai_api_key_here

# ================================
# Service Ports
# ================================
AGENT_PLANNER_PORT=8300
AGENT_EXECUTOR_PORT=8400
AGI_QWEN_SERVICE_PORT=8201
GRAFANA_PORT=3000
PROMETHEUS_PORT=9090
HEALTH_CHECK_PROXY_PORT=8105

# ================================
# Load Balancer Ports
# ================================
AGI_QWEN_LB_PORT=8202
AGI_SYNERGY_API_LB_PORT=8199
AGI_LEARNING_API_LB_PORT=8200

# ================================
# Logging Configuration
# ================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - [%(levelname)s] - %(message)s

# ================================
# Docker Configuration
# ================================
# Docker network name
DOCKER_NETWORK=superai_network

# Docker restart policy
RESTART_POLICY=unless-stopped

# ================================
# Monitoring Configuration
# ================================
# Prometheus configuration
PROMETHEUS_RETENTION_TIME=15d
PROMETHEUS_SCRAPE_INTERVAL=15s

# Grafana configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# ================================
# Performance Configuration
# ================================
# Gunicorn workers
GUNICORN_WORKERS=2
GUNICORN_WORKER_CLASS=gevent
GUNICORN_WORKER_CONNECTIONS=1000

# Redis connection pool
REDIS_MAX_CONNECTIONS=50
REDIS_CONNECTION_POOL_SIZE=10

# ================================
# Security Configuration
# ================================
# Enable/disable debug mode
DEBUG=false

# Secret key for session management
SECRET_KEY=your_secret_key_here

# CORS settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ================================
# Feature Flags
# ================================
# Enable/disable specific features
ENABLE_WEB_SEARCH=true
ENABLE_FILE_OPERATIONS=true
ENABLE_MATH_CALCULATIONS=true
ENABLE_MONITORING=true

# ================================
# Development Configuration
# ================================
# Development mode settings
DEV_MODE=false
DEV_RELOAD=false

# Testing configuration
TEST_MODE=false
TEST_REDIS_DB=1

# ================================
# Model Configuration
# ================================
# Model paths and settings
MODEL_PATH=./models
DEFAULT_MODEL=Qwen1.5-1.8B-Chat

# Model server configuration
MODEL_SERVER_HOST=localhost
MODEL_SERVER_PORT=8000
MODEL_SERVER_TIMEOUT=30

# ================================
# Storage Configuration
# ================================
# File storage settings
FILE_STORAGE_PATH=./storage
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=txt,md,json,csv,pdf

# Backup configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION=7d

# ================================
# Notification Configuration
# ================================
# Email notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=SuperAI System <noreply@superai.com>

# Webhook notifications (optional)
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# ================================
# Advanced Configuration
# ================================
# Task processing settings
TASK_TIMEOUT=300
TASK_RETRY_ATTEMPTS=3
TASK_RETRY_DELAY=5

# Event bus settings
EVENT_BUS_BUFFER_SIZE=1000
EVENT_BUS_BATCH_SIZE=10
EVENT_BUS_FLUSH_INTERVAL=1

# Health check settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# ================================
# Environment Specific Settings
# ================================
# Current environment (development, staging, production)
ENVIRONMENT=development

# Version information
VERSION=1.0.0
BUILD_NUMBER=
COMMIT_SHA=

# ================================
# Notes
# ================================
# 1. Replace all placeholder values with your actual configuration
# 2. Keep this file secure and never commit it to version control
# 3. Use strong passwords and API keys
# 4. Regularly rotate API keys and secrets
# 5. For production, consider using environment-specific configuration management